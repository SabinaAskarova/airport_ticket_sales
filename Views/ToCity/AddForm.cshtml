@using MyProject.DTOs.ToCityDTOs

@model ToCityAddDTO

<head>
	<link type="text/css" rel="stylesheet" href="~/colorlib-booking-19/colorlib-booking-19/css/bootstrap.min.css" />

	<link type="text/css" rel="stylesheet" href="~/colorlib-booking-19/colorlib-booking-19/css/style.css" />
	<link type="text/css" rel="stylesheet" href="~/colorlib-booking-19/colorlib-booking-19/css/tocityimage.css" />
</head>
<body>
<div class="body">
	<div id="booking" class="section">
		<div class="section-center">
			<div class="container">
				<div class="row" style="margin-left:-82px">
					<div style="width:40%;" class="col-md-4">
						<div class="booking-cta">
							<h1>Lorem Ipsum Dolor Sit</h1>
							<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Cupiditate laboriosam numquam at</p>
						</div>
					</div>
					<div style="width:40%; margin-bottom:20px; margin-top:43px" class="col-md-7 col-md-offset-1">
						<div class="booking-form">
							<form method="post" asp-controller="ToCity" asp-action="Add">						
								<div class="row" >
									<div class="col-md-6">
										<div class="form-group" style="width: 300px; margin-left: 40px; margin-top:35px">
											<span class="form-label" stye="font-size: 14px;">City Name</span>
											<input asp-for="@Model.TCityName" class="form-control" type="text" placeholder=" add to city name">
											@Html.ValidationMessageFor(model => model.TCityName, "", new { @class = "text-danger" })

										</div>
									</div>
									
								</div>
							
								<div class="form-btn">
									<button style="width:100px;margin-right:30px;margin-top:-16px;margin-left: 220px; height:35px;" class="submit-btn">Add</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</body>

